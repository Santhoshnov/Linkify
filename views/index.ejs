<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>URL Shortener</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/css/bootstrap.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      padding: 20px;
    }
    
    .container {
      max-width: 400px;
      margin: 0 auto;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 4px;
      padding: 20px;
    }
    
    h1 {
      color: #007bff;
      margin-top: 0;
      margin-bottom: 20px;
      text-align: center;
    }
    
    .error {
      color: #dc3545;
      margin-bottom: 20px;
    }
    
    .short-url {
      color: #28a745;
      margin-bottom: 20px;
      word-break: break-all;
    }
    
    .form-control {
      border-radius: 4px;
    }
    
    .submit-btn {
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mt-4">Linkify</h1>
    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (typeof shortUrl !== 'undefined') { %>
      <div class="alert alert-success"><strong>Shortened URL:</strong> <a href="<%= shortUrl %>"><%= shortUrl %></a></div>
    <% } %>
    <form class="mt-4" action="/shorten" method="post">
      <div class="form-group">
        <input type="text" class="form-control" name="longUrl" placeholder="Enter URL" required>
      </div>
      <button type="submit" class="btn btn-primary submit-btn">Shorten</button>
    </form>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
